{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Web Server",
			"program": "${workspaceFolder}/build/src/cli.js",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outputCapture": "std",
			"args": [
				"--development-mode",
				"--hotsite",
				"./HotSite.json",
				"run"
			],
			"env": {}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Web/API Server",
			"program": "${workspaceFolder}/build/src/cli.js",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outputCapture": "std",
			"args": [
				"--development-mode",
				"run",
				"--server-type", "web-api"
			],
			"env": {}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug API Server",
			"program": "${workspaceFolder}/build/src/cli.js",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outputCapture": "std",
			"args": [
				"--development-mode",
				"--hotsite",
				"./HotSite.json",
				"run",
				"--server-type",
				"api"
			],
			"env": {}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Run Web-API Tests",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/build/src/cli.js",
			"args": [
				"--development-mode",
				"--start-delay", "2000",
				"--hotsite",
				"./HotSite.json",
				"--verbose",
				"run",
				"--tester-test-timeout", "0",
				"--tester-open-dev-tools",
				"--server-type", "web-api",
				"--web-test"
			],
			"env": {}
		},
		{
			"type": "pwa-node",
			"request": "attach",
			"name": "Remote Debugger",
			"skipFiles": [
				"<node_internals>/**"
			],
			"localRoot": "${workspaceFolder}",
			"address": "127.0.0.1",
			"port": 9229,
			"remoteRoot": "/app"
		}
	]
}